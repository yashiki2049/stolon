<%= render "shared/header" %>
<div class="show-wrapper">
    <div class="photo-show-wrap">

      <div class="photo-show">
      <div class="photo-show-box">
        <%= image_tag @photo.image ,class:"item-box-img" %>
      </div>
      <%# いいね %>
        <%# <span class="like">いいね機能 %>
          <%# ライクボタン押してない時 %>
