      <%# いいね %>
        <div class="photo-tags">
        <span class="tags-list">
        <span class="fa fa-leaf tags-btn"></span>

                <span class="keyword">キーワード</span>
              <% @photo.tags.each do |tag| %>
                <span class="tag-name"><%=tag.tag_name%></strong></span>
              <%end%>
        </span>
        </div>

        <div class="show-title">
            <span class="fa fa-camera tags-btn"></span><%= @photo.title %><%# 投稿者名表示 %>
            <span class="post-date"><%= @photo.created_at.strftime("%Y/%m/%d") %></span><%# 投稿日付表示 %>
          </div>
          <p class="show-info">

          <%= safe_join(@photo.text.split("\n"), tag(:br)) %>
          </p>
      </div>

      <div class="post-show-user">
        <p><%= image_tag @photo.user.avatar %></p>
        <p class="post-show-name"><%= @photo.user.name %></p>
        <p class="post-show-text">
        <%= safe_join(@photo.user.text.split("\n"), tag(:br)) %>
      </div>
